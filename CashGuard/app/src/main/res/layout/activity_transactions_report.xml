<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Date Range Selectors -->
    <Button
        android:id="@+id/btnFromDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:drawableTint="#FFFFFF"
        android:gravity="start|center_vertical"
        android:text="From Date"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/underlineFrom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/btnFromDate"
        app:layout_constraintStart_toStartOf="@id/btnFromDate"
        app:layout_constraintTop_toBottomOf="@id/btnFromDate"/>

    <Button
        android:id="@+id/btnToDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:drawableTint="#FFFFFF"
        android:gravity="start|center_vertical"
        android:text="To Date"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/underlineFrom"
        app:layout_constraintStart_toStartOf="@id/underlineFrom"
        app:layout_constraintTop_toBottomOf="@id/underlineFrom"/>

    <View
        android:id="@+id/underlineTo"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/btnToDate"
        app:layout_constraintStart_toStartOf="@id/btnToDate"
        app:layout_constraintTop_toBottomOf="@id/btnToDate"/>

    <!-- Type Spinner -->
    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFFFFF"
        android:entries="@array/transaction_types"
        android:spinnerMode="dropdown"
        android:textColor="@color/white"
        android:background="@drawable/spinner_box"
        android:popupBackground="@color/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underlineTo"/>

    <!-- Search Button -->

    <!-- Results ScrollView -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/glow"
        android:text="Search by Date"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerType" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSearch">

        <LinearLayout
            android:id="@+id/resultsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Category totals will be added programmatically here -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>