<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragments.BudgetFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Chart Placeholder -->
            <ImageView
                android:id="@+id/budgetChart"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="32dp"
                android:scaleType="fitCenter"/>

            <!-- Button Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnAddExpense"
                        android:layout_weight="1"
                        android:text="Add Expense"
                        app:strokeColor="#FF4C4C"
                        style="@style/SmallButton"
                        app:strokeWidth="2dp"
                        app:cornerRadius="6dp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnAddIncome"
                        style="@style/SmallButton"
                        android:layout_weight="1"
                        app:cornerRadius="6dp"
                        android:text="Add Income"
                        app:strokeColor="#00FF6A"
                        app:strokeWidth="2dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnBudgetManager"
                        android:layout_weight="1"
                        android:text="Budget Manager"
                        app:strokeColor="@color/glow"
                        style="@style/SmallButton"
                        app:strokeWidth="2dp"
                        app:cornerRadius="6dp"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/viewTransactionBudgetPage"
                        style="@style/SmallButton"
                        app:strokeWidth="2dp"
                        app:cornerRadius="6dp"
                        android:layout_weight="1"
                        app:strokeColor="@color/white"
                        android:text="View Transactions"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Summary Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:padding="16dp"
                android:background="#1E2A4D"
                android:layout_marginHorizontal="16dp"
                android:elevation="4dp">

                <!-- Budget Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Budget"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R15 000"
                        android:textColor="#00FFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#37455F"
                    android:layout_marginVertical="4dp"/>

                <!-- Expenses Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expenses"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R5 000"
                        android:textColor="#FF4C4C"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#37455F"
                    android:layout_marginVertical="4dp"/>

                <!-- Balance Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balance"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R10 000"
                        android:textColor="#00C853"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>