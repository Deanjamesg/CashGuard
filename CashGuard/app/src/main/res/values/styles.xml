<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="HeaderText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="SubHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>

    </style>

    <style name="LargeInputField">
        <item name="android:background">@drawable/box_outline</item>
        <item name="android:paddingLeft">50px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_width">325sp</item>
        <item name="android:layout_height">60sp</item>
    </style>

    <style name="CheckboxTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SubmitButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">325sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:backgroundTint">@color/menu</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="SmallButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">550px</item>
        <item name="android:layout_height">200px</item>
        <item name="android:backgroundTint">@color/menu</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FooterText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>

    </style>

