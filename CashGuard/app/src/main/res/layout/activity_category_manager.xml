<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Manager"
        android:layout_gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Default Categories Header -->
            <TextView
                style="@style/SubHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Categories"
                android:layout_marginBottom="8dp"/>

            <!-- Default Categories Container -->
            <LinearLayout
                android:id="@+id/defaultCategoriesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"/>

            <!-- User Categories Header -->
            <TextView
                style="@style/SubHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Categories"
                android:layout_marginBottom="8dp"/>

            <!-- Dynamic Categories Container -->
            <LinearLayout
                android:id="@+id/categoryButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!-- Add/Remove Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">
            </LinearLayout>

            <Button
                android:id="@+id/addButton"
                style="@style/SmallButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="10dp"
                android:padding="0dp"
                android:text="+"
                android:textSize="28sp"
                app:cornerRadius="6dp"
                app:strokeColor="@color/glow"
                app:strokeWidth="2dp" />

            <!-- Add/Remove Controls -->
            <Button
                android:id="@+id/removeButton"
                style="@style/SmallButton"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:padding="0dp"
                android:text="-"
                android:textSize="28sp"
                app:cornerRadius="6dp"
                app:strokeColor="#FF0000"
                app:strokeWidth="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


            </LinearLayout>

            <Button
                android:id="@+id/submitBudget"
                style="@style/SmallButton"
                android:layout_width="220dp"
                android:layout_height="74dp"
                android:layout_marginTop="10dp"
                android:text="Setup a Budget Plan"
                app:cornerRadius="6dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>