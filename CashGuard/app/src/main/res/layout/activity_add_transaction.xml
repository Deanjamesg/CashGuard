<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="40sp">

    <TextView
        style="@style/HeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        android:text="Add Expense"
        android:textAlignment="center" />

    <TextView
        style="@style/SubHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Transaction Amount:"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/edit_text_amount"
        style="@style/LargeInputField"
        android:layout_marginBottom="16dp"
        android:hint="R"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:background="@drawable/spinner_box"
        android:popupBackground="@color/menu"
        android:spinnerMode="dropdown"
        tools:entry="Select a Category" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10dp"
        android:text="Note (Optional):"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_text_note"
        style="@style/LargeInputField"
        android:layout_marginBottom="16dp"
        android:hint="e.g. Pick 'n Pay"
        android:textColorHint="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Attach a Photo ( Invoice / Receipt ):"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_add_photo"
        style="@style/SubmitButton"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginBottom="16dp"
        android:text="Add Photo"
        android:textSize="16sp"
        app:cornerRadius="6dp" />

    <Button
        android:id="@+id/button_submit"
        style="@style/SubmitButton"
        android:layout_marginTop="16dp"
        android:text="Submit"
        app:cornerRadius="6dp" />

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/home"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/searchIcon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/search"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/settingsIcon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/setting"
            app:tint="@android:color/white" />
    </LinearLayout>
</LinearLayout>