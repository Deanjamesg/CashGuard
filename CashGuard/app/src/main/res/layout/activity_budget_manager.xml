<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:fillViewport="true"

    android:padding="16dp">

    <!-- Header -->
    <TextView
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Budget Manager" />

    <TextView
        style="@style/SubHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="If you only want to add a budget for your TOTAL expenses and not for SPECIFIC categories, enter a value right below."
        android:textSize="16sp" />

    <!-- Total Expenses Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Total Expenses (Budget)"
        style="@style/SubHeaderText"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        style="@style/LargeInputField"
        android:hint="R0"
        android:inputType="numberDecimal"
        android:text="R21 500"
        android:textSize="18sp" />

    <!-- Categories Section Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/SubHeaderText"
        android:text="To add a budget for specific categories, enter a value for each one below."
        android:textSize="16sp" />

    <!-- Categories and Budgets Table -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:stretchColumns="1">

        <!-- Header Row -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Categories"
                style="@style/SubHeaderText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Budget"
                style="@style/SubHeaderText"/>
        </TableRow>

        <!-- Food & Drink -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/FooterText"
                android:text="Food &amp; Drink"
                android:textSize="16sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="R0"
                android:inputType="numberDecimal"
                style="@style/LargeInputField"
                android:text="R4500"
                android:textSize="16sp" />
        </TableRow>

        <!-- Subscriptions -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/FooterText"
                android:text="Subscriptions"
                android:textSize="16sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/LargeInputField"
                android:hint="R0"
                android:inputType="numberDecimal"
                android:text="R1500"
                android:textSize="16sp" />
        </TableRow>

        <!-- Transport -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/FooterText"
                android:text="Transport"
                android:textSize="16sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/LargeInputField"
                android:hint="R0"
                android:inputType="numberDecimal"
                android:text="R5000"
                android:textSize="16sp" />
        </TableRow>

        <!-- Entertainment -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Household -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>
    </TableLayout>

    <!-- Action Buttons -->
    <Button
        android:layout_marginBottom="12dp"
        style="@style/SubmitButton"
        app:cornerRadius="6dp"
        android:layout_gravity="center"
        android:text="Submit Budget" />

</LinearLayout>